@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MazeBall</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="background-image">
        <div class="form-box">
            <h1 id="title">Log In</h1>
            <form>
                <div class="input-group">
                    <h4 class="errorText" id="errorText"> </h4>
                    <div class="input-field" id="usernameField">
                        <span class="glyphicon glyphicon-user"></span>
                        <input type="text" placeholder="Username" />
                    </div>
                    <div class="input-field" id="passwordField">
                        <span class="glyphicon glyphicon-lock"></span>
                        <input type="password" placeholder="Password" />
                    </div>
                    <div class="input-field" id="confirmPasswordField">
                        <span class="glyphicon glyphicon-lock"></span>
                        <input type="password" placeholder="Confirm Password" />
                    </div>
                    <div class="input-field" id="emailField">
                        <span class="glyphicon glyphicon-envelope"></span>
                        <input type="email" placeholder="Email" />
                    </div>
                    <h4 class="birthDateText" id="birthDateText">Birth Date:</h4>
                    <div class="input-field date" id="datepickerField" data-date-format="dd-mm-yyyy">
                        <input class="form-control" type="text" readonly />
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-calendar calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="button-field">
                    <button type="button" id="loginButton">Log In</button>
                    <button type="button" id="registerButton" class="disabled">Register</button>
                    <div id="g_id_onload"
                         data-client_id="241863096086-rjg6eunhrlrn846d34oj3oubo36vl8e7.apps.googleusercontent.com"
                         data-context="signin"
                         data-ux_mode="popup"
                         data-callback="handleLoginGoogle"
                         data-auto_prompt="false">
                    </div>
                    <div class="g_id_signin" data-type="standard"></div>
                </div>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="~/js/login.js"></script>
</body>